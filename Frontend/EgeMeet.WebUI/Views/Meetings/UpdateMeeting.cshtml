@model UpdateMeeting
@{
    ViewData["Title"] = "UpdateMeeting";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Toplantı Düzenleme</h4>
      
        <form method="post" >
            <div class="form-group row" >
                <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tarih Güncelle</label>
                <div class="col-sm-9">
                    <input type="datetime-local" class="form-control" placeholder="Tarih" asp-for="MeetingDate">
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Açıklama</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" placeholder="Açıklama" asp-for="Description">
                </div>
            </div>
         
            <button  class="btn btn-inverse-success btn-fw">Talep Et</button>
            <button class="btn btn-light" href="/Meetings/Index">Cancel</button>
        </form>
    </div>
</div>

