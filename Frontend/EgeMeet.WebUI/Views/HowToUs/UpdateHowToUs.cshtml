@model HowToUsUpdateViewModel
@{
    ViewData["Title"] = "UpdateHowToUs";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Nasıl Çalışır Güncelleme Sayfası</h4>
           
            <form method="post" >
                <input type="hidden" asp-for=" HowToUsid"/>
                <div class="form-group">
                    <label for="exampleInputUsername1">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
               
                  <div class="form-group">
                    <label for="exampleInputUsername1">İcon Resim</label>
                    <input type="text" class="form-control" asp-for="İcon">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">İcon Başlık</label>
                    <input type="text" class="form-control" asp-for="smailltitle">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">İcon Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description">
                </div>
             
                <button class="btn btn-inverse-success btn-fw">Güncelle</button>
                <a href="/HomePage/Index" class="btn btn-inverse-danger btn-fw">Çık</a>
            </form>
        </div>
    </div>
</div>